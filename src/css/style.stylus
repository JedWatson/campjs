@import 'nib'

y-offset = 300px
mountain-height = 101px
content-start = y-offset + 200px

html, body
  height: 100%
  width: 100%

body
  font-family: 'Press Start 2P', cursive
  color: #555
  background: linear-gradient(top, #e0f3fa 0%,#e0f3fa y-offset + mountain-height,#d1dfbc y-offset + mountain-height + 1,#d1dfbc 100%)
  
.bg
  position: absolute
  top: 0
  height: 100%
  width: 100%
  background-position-y: center
  background-color: #e0f3fa
.small-mountains
  background: url('/images/small-mountains.png') repeat-x
  background-position-x: center
  background-position-y: y-offset
.large-mountains
  background: url('/images/large-mountains.png')
  background-position-x: center
  background-position-y: y-offset
  background-repeat: no-repeat
.monolith
  background: url('/images/monolith.png')
  background-position-x: center
  background-position-y: y-offset - 130px
  background-repeat: no-repeat

.masthead
  margin-top: 50px
  text-align: center
  
  h2
    margin: 20px 0 0

h1
  font-size: 60px
  
h2 
  font-size: 16px;
  
.content
  position: relative
  z-index: 1
  top: content-start
